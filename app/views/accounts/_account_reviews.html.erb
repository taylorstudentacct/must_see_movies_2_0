<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Reviews

    <a data-toggle="collapse" href="#account_reviews_new_form">
      Add review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @account.reviews.each do |review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to review, review %>

        <%= link_to review, method: :delete, data: { confirm: "Do you really want to delete this review" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="account_reviews_new_form">
        <%= render partial: "accounts/account_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
