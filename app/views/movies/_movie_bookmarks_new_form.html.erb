<!-- Form bookmark start -->
<%= form_with(model: @bookmark, local: true) do |f| %>
<!-- Form bookmark end -->

  <!-- Label and input for account_id start -->
  <div class="form-group">
    <%= f.label :account_id %>

    <!-- Input for account_id start -->
    <%= f.collection_select :account_id, Account.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for account_id end -->
  </div>
  <!-- Label and input for account_id end -->

  <!-- Label and input for movie_id start -->
  <!-- Input for movie_id start -->
  <%= f.hidden_field :movie_id, value: @movie.id %>
  <!-- Input for movie_id end -->
  <!-- Label and input for movie_id end -->

  <%= f.submit "Create bookmark", class: "btn btn-block btn-outline-secondary" %>
<% end %>
